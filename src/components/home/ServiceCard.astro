---
import Markdoc from "@markdoc/markdoc";

interface Props {
  item: {
    image?: {
      src: string;
      width: number;
      height: number;
      format: string;
    };
    title: string;
    description: string;
  };
}

const { item } = Astro.props;

// Parse Markdoc string to HTML instead of AST for DocumentRenderer
const source = item.description || "";
const ast = Markdoc.parse(source);
const content = Markdoc.transform(ast);
const html = Markdoc.renderers.html(content);

---

<div class="flex flex-col space-y-5">
  {
    item.image ? (
      <img
        src={item.image.src}
        alt={item.title}
        class="w-full h-full rounded-[60px] max-h-[330px]"
        data-sb-field-path=".image"
      />
    ) : (
      <div class="w-full h-64 bg-gray-200 rounded-2xl flex items-center justify-center">
        <span class="text-gray-400 text-sm">No image</span>
      </div>
    )
  }
  <div class="space-y-3">
    <h3 class="text-2xl font-brand-heading text-brand-dark" data-sb-field-path=".title">{item.title}</h3>
    <div 
      class="text-sm font-book text-brand-dark leading-relaxed" 
      set:html={html}
      data-sb-field-path=".description"
    />
  </div>
</div>
